<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="30dp"
    android:id="@+id/agencie_c"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

                <ImageView
                    android:id="@+id/agencie_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:maxWidth="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/nocturnelife_bkg"
                    android:background="@drawable/rounded_img" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/agencie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/agencie_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:id="@+id/plans_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/plans_btn_bkg"
                android:layout_marginBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="See plans"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</com.google.android.material.card.MaterialCardView>